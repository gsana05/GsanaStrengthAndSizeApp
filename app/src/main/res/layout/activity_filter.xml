<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FilterActivity"
    android:id="@+id/activity_filter_layout"
    >

    <View
        android:id="@+id/filter_heading_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/filter_main_view"
        android:background="@color/ssBlack"
        app:layout_constraintVertical_weight="0.1"
        />

    <ImageView
        android:id="@+id/filter_heading_view_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@+id/filter_heading_view"
        app:layout_constraintStart_toStartOf="@+id/filter_heading_view"
        app:layout_constraintBottom_toBottomOf="@+id/filter_heading_view"
        app:layout_constraintEnd_toStartOf="@+id/filter_heading_view_label"
        android:src="@drawable/ic_keyboard_backspace_24px"
        android:tint="@color/ssWhite"
        app:layout_constraintHorizontal_bias="0.3"
        />

    <TextView
        android:id="@+id/filter_heading_view_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@+id/filter_heading_view"
        app:layout_constraintStart_toStartOf="@+id/filter_heading_view"
        app:layout_constraintEnd_toEndOf="@+id/filter_heading_view"
        app:layout_constraintBottom_toBottomOf="@+id/filter_heading_view"
        android:text="Filter"
        android:textColor="@color/ssWhite"
        android:textSize="18sp"
        android:textStyle="bold"
        />

    <View
        android:id="@+id/filter_main_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/filter_heading_view"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@color/ssBrown"
        app:layout_constraintVertical_weight="0.9"
        />

    <TextView
        android:id="@+id/filter_main_view_heading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@+id/filter_main_view"
        app:layout_constraintStart_toStartOf="@+id/filter_main_view"
        app:layout_constraintEnd_toEndOf="@+id/filter_main_view"
        android:layout_marginTop="20dp"
        android:text="Sort by: "
        android:textColor="@color/ssWhite"
        android:textSize="18sp"
        android:textStyle="bold"
        />

    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/filter_main_view_switch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/filter_main_view_heading"
        app:layout_constraintStart_toStartOf="@id/filter_main_view"
        app:layout_constraintEnd_toEndOf="@id/filter_main_view"
        android:textOff="@string/filter"
        android:textOn="@string/custom"
        android:thumb="@drawable/sw_thumb"
        app:track="@drawable/sw_track"
        app:showText="true"
        app:switchTextAppearance="@style/SwitchTextAppearance"
        />

    <TextView
        android:id="@+id/dashboard_map_toggle_switch_map"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@+id/filter_main_view_switch"
        app:layout_constraintBottom_toBottomOf="@+id/filter_main_view_switch"
        app:layout_constraintEnd_toEndOf="@+id/filter_main_view_switch"
        app:layout_constraintStart_toEndOf="@+id/dashboard_map_toggle_switch_list"
        android:text="@string/custom"
        android:textColor="@color/ssBlack"
        />

    <TextView
        android:id="@+id/dashboard_map_toggle_switch_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@+id/filter_main_view_switch"
        app:layout_constraintBottom_toBottomOf="@+id/filter_main_view_switch"
        app:layout_constraintStart_toStartOf="@+id/filter_main_view_switch"
        app:layout_constraintEnd_toStartOf="@+id/dashboard_map_toggle_switch_map"
        android:text="@string/filter"
        android:textColor="@color/ssBlack"
        />

    <Spinner
        android:id="@+id/filter_main_view_drop_down"
        android:layout_width="0dp"
        android:layout_height="40dp"
        app:layout_constraintTop_toBottomOf="@+id/filter_main_view_switch"
        app:layout_constraintStart_toStartOf="@id/filter_main_view"
        app:layout_constraintEnd_toEndOf="@id/filter_main_view"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        style="@style/spinner_style"
        android:overlapAnchor="false"
        />

    <ImageView
        android:id="@+id/filter_main_view_drop_down_arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@+id/filter_main_view_drop_down"
        app:layout_constraintBottom_toBottomOf="@+id/filter_main_view_drop_down"
        app:layout_constraintEnd_toEndOf="@+id/filter_main_view_drop_down"
        app:layout_constraintStart_toStartOf="@+id/filter_main_view_drop_down"
        app:layout_constraintHorizontal_bias="0.9"
        android:src="@drawable/ic_arrow_drop_down_24px"
        android:tint="@color/ssBlack"
        />

    <!-- Custom Filter -->

    <Spinner
        android:id="@+id/filter_main_view_drop_down_custom_bench"
        android:layout_width="0dp"
        android:layout_height="40dp"
        app:layout_constraintTop_toBottomOf="@+id/filter_main_view_switch"
        app:layout_constraintStart_toStartOf="@id/filter_main_view"
        app:layout_constraintEnd_toEndOf="@id/filter_main_view"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        style="@style/spinner_style"
        android:overlapAnchor="false"
        />

    <ImageView
        android:id="@+id/filter_main_view_drop_down_custom_bench_arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@+id/filter_main_view_drop_down_custom_bench"
        app:layout_constraintBottom_toBottomOf="@+id/filter_main_view_drop_down_custom_bench"
        app:layout_constraintEnd_toEndOf="@+id/filter_main_view_drop_down_custom_bench"
        app:layout_constraintStart_toStartOf="@+id/filter_main_view_drop_down_custom_bench"
        app:layout_constraintHorizontal_bias="0.9"
        android:src="@drawable/ic_arrow_drop_down_24px"
        android:tint="@color/ssBlack"
        />

    <Spinner
        android:id="@+id/filter_main_view_drop_down_custom_squat"
        android:layout_width="0dp"
        android:layout_height="40dp"
        app:layout_constraintTop_toBottomOf="@+id/filter_main_view_drop_down_custom_bench"
        app:layout_constraintStart_toStartOf="@id/filter_main_view"
        app:layout_constraintEnd_toEndOf="@id/filter_main_view"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        style="@style/spinner_style"
        android:overlapAnchor="false"
        />

    <ImageView
        android:id="@+id/filter_main_view_drop_down_custom_squat_arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@+id/filter_main_view_drop_down_custom_squat"
        app:layout_constraintBottom_toBottomOf="@+id/filter_main_view_drop_down_custom_squat"
        app:layout_constraintEnd_toEndOf="@+id/filter_main_view_drop_down_custom_squat"
        app:layout_constraintStart_toStartOf="@+id/filter_main_view_drop_down_custom_squat"
        app:layout_constraintHorizontal_bias="0.9"
        android:src="@drawable/ic_arrow_drop_down_24px"
        android:tint="@color/ssBlack"
        />

    <Spinner
        android:id="@+id/filter_main_view_drop_down_custom_deadlift"
        android:layout_width="0dp"
        android:layout_height="40dp"
        app:layout_constraintTop_toBottomOf="@+id/filter_main_view_drop_down_custom_squat"
        app:layout_constraintStart_toStartOf="@id/filter_main_view"
        app:layout_constraintEnd_toEndOf="@id/filter_main_view"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        style="@style/spinner_style"
        android:overlapAnchor="false"
        />

    <ImageView
        android:id="@+id/filter_main_view_drop_down_custom_deadlift_arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@+id/filter_main_view_drop_down_custom_deadlift"
        app:layout_constraintBottom_toBottomOf="@+id/filter_main_view_drop_down_custom_deadlift"
        app:layout_constraintEnd_toEndOf="@+id/filter_main_view_drop_down_custom_deadlift"
        app:layout_constraintStart_toStartOf="@+id/filter_main_view_drop_down_custom_deadlift"
        app:layout_constraintHorizontal_bias="0.9"
        android:src="@drawable/ic_arrow_drop_down_24px"
        android:tint="@color/ssBlack"
        />

    <Spinner
        android:id="@+id/filter_main_view_drop_down_custom_ohp"
        android:layout_width="0dp"
        android:layout_height="40dp"
        app:layout_constraintTop_toBottomOf="@+id/filter_main_view_drop_down_custom_deadlift"
        app:layout_constraintStart_toStartOf="@id/filter_main_view"
        app:layout_constraintEnd_toEndOf="@id/filter_main_view"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        style="@style/spinner_style"
        android:overlapAnchor="false"
        />

    <ImageView
        android:id="@+id/filter_main_view_drop_down_custom_ohp_arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@+id/filter_main_view_drop_down_custom_ohp"
        app:layout_constraintBottom_toBottomOf="@+id/filter_main_view_drop_down_custom_ohp"
        app:layout_constraintEnd_toEndOf="@+id/filter_main_view_drop_down_custom_ohp"
        app:layout_constraintStart_toStartOf="@+id/filter_main_view_drop_down_custom_ohp"
        app:layout_constraintHorizontal_bias="0.9"
        android:src="@drawable/ic_arrow_drop_down_24px"
        android:tint="@color/ssBlack"
        />

    <Button
        android:id="@+id/filter_main_view_submit_btn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/filter_main_view_drop_down_custom_ohp"
        app:layout_constraintStart_toStartOf="@id/filter_main_view"
        app:layout_constraintEnd_toEndOf="@id/filter_main_view"
        app:layout_constraintBottom_toBottomOf="@id/filter_main_view"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:background="@drawable/white_border"
        android:backgroundTint="@color/ssBlack"
        android:text="Submit"
        android:textAllCaps="false"
        android:textColor="@color/ssWhite"
        android:textSize="18sp"
        />


</androidx.constraintlayout.widget.ConstraintLayout>