<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <TextView
        android:id="@+id/custom_league_creator_edit_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/custom_league_creator_edit_bench_label"
        android:layout_marginTop="50dp"
        android:text="League members name"
        android:textStyle="bold"
        android:textColor="@color/ssBlack"
        android:textSize="18sp"
        app:layout_constraintVertical_chainStyle="packed"
        />

    <TextView
        android:id="@+id/custom_league_creator_edit_bench_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/custom_league_creator_edit_name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/custom_league_creator_edit_bench_input"
        android:layout_marginTop="20dp"
        android:text="Bench Press"
        android:textStyle="bold"
        android:textColor="@color/ssBlack"
        android:textSize="18sp"
        />

    <EditText
        android:id="@+id/custom_league_creator_edit_bench_input"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/custom_league_creator_edit_bench_label"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/custom_league_creator_edit_squat_label"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/brown_border"
        android:textAlignment="center"
        />

    <TextView
        android:id="@+id/custom_league_creator_edit_squat_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/custom_league_creator_edit_bench_input"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/custom_league_creator_edit_squat_input"
        android:layout_marginTop="20dp"
        android:text="Squat"
        android:textStyle="bold"
        android:textColor="@color/ssBlack"
        android:textSize="18sp"
        />

    <EditText
        android:id="@+id/custom_league_creator_edit_squat_input"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/custom_league_creator_edit_squat_label"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/custom_league_creator_edit_deadlift_label"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/brown_border"
        android:textAlignment="center"
        />

    <TextView
        android:id="@+id/custom_league_creator_edit_deadlift_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/custom_league_creator_edit_squat_input"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/custom_league_creator_edit_deadlift_input"
        android:layout_marginTop="20dp"
        android:text="Deadlift"
        android:textStyle="bold"
        android:textColor="@color/ssBlack"
        android:textSize="18sp"
        />

    <EditText
        android:id="@+id/custom_league_creator_edit_deadlift_input"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/custom_league_creator_edit_deadlift_label"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/custom_league_creator_edit_ohp_label"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/brown_border"
        android:textAlignment="center"
        />

    <TextView
        android:id="@+id/custom_league_creator_edit_ohp_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/custom_league_creator_edit_deadlift_input"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/custom_league_creator_edit_ohp_input"
        android:layout_marginTop="20dp"
        android:text="Over Head Press"
        android:textStyle="bold"
        android:textColor="@color/ssBlack"
        android:textSize="18sp"
        />

    <EditText
        android:id="@+id/custom_league_creator_edit_ohp_input"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/custom_league_creator_edit_ohp_label"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/custom_league_creator_edit_btn_remove"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/brown_border"
        android:textAlignment="center"
        />

    <Button
        android:id="@+id/custom_league_creator_edit_btn_remove"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/custom_league_creator_edit_ohp_input"
        app:layout_constraintStart_toStartOf="@+id/custom_league_creator_edit_ohp_input"
        app:layout_constraintEnd_toStartOf="@+id/custom_league_creator_edit_btn_flag"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/brown_border"
        android:backgroundTint="@color/ssGreen"
        android:text="Remove from league"
        android:textAllCaps="false"
        android:textColor="@color/ssWhite"
        />

    <Button
        android:id="@+id/custom_league_creator_edit_btn_flag"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@+id/custom_league_creator_edit_btn_remove"
        app:layout_constraintStart_toEndOf="@+id/custom_league_creator_edit_btn_remove"
        app:layout_constraintEnd_toStartOf="@+id/custom_league_creator_edit_btn_cancel"
        android:background="@drawable/brown_border"
        android:backgroundTint="@color/ssBrown"
        android:layout_marginEnd="20dp"
        android:text="Flag"
        android:textAllCaps="false"
        android:textColor="@color/ssWhite"
        />

    <Button
        android:id="@+id/custom_league_creator_edit_btn_cancel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@+id/custom_league_creator_edit_btn_remove"
        app:layout_constraintEnd_toEndOf="@+id/custom_league_creator_edit_ohp_input"
        app:layout_constraintStart_toEndOf="@+id/custom_league_creator_edit_btn_flag"
        android:background="@drawable/red_border"
        android:backgroundTint="@color/ssRed"
        android:text="Cancel"
        android:textAllCaps="false"
        android:textColor="@color/ssWhite"
        />

</androidx.constraintlayout.widget.ConstraintLayout>