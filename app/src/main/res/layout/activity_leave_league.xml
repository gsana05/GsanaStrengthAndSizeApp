<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/ssBackgroundBlack"
    tools:context=".ActivityLeaveLeague">

    <TextView
        android:id="@+id/leave_league_heading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="50dp"
        android:text="The name of the league you want to leave:"
        android:textColor="@color/ssWhite"
        android:textSize="18sp"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/leave_league_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/leave_league_heading"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="League name"
        android:textColor="@color/ssWhite"
        android:textSize="18sp"
        android:textStyle="bold"
        />

    <Button
        android:id="@+id/leave_league_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/leave_league_name"
        app:layout_constraintStart_toStartOf="@id/leave_league_heading"
        app:layout_constraintEnd_toStartOf="@+id/leave_league_cancel"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/white_border"
        android:backgroundTint="@color/ssGreen"
        android:text="Leave league"
        android:textAllCaps="false"
        android:textColor="@color/ssWhite"
        />

    <ProgressBar
        android:id="@+id/leave_league_button_progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@+id/leave_league_button"
        app:layout_constraintStart_toStartOf="@+id/leave_league_button"
        app:layout_constraintEnd_toEndOf="@+id/leave_league_button"
        app:layout_constraintBottom_toBottomOf="@+id/leave_league_button"
        />

    <Button
        android:id="@+id/leave_league_cancel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/leave_league_name"
        app:layout_constraintEnd_toEndOf="@id/leave_league_heading"
        app:layout_constraintStart_toEndOf="@+id/leave_league_button"
        android:layout_marginTop="20dp"
        android:background="@drawable/white_border"
        android:backgroundTint="@color/ssRed"
        android:text="Cancel"
        android:textAllCaps="false"
        android:textColor="@color/ssWhite"
        />

</androidx.constraintlayout.widget.ConstraintLayout>